<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragment.FragmentTwo">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="FragmentTwo"
        android:textSize="25sp" />

    <com.boylab.fragmentdemo.view.ActionView
        android:id="@+id/actionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview" />

    <Button
        android:id="@+id/btn_Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionView"
        android:layout_marginTop="20dp"
        android:text="跳转Fragment回调"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Fragment"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Fragment"
        android:layout_marginTop="20dp"
        android:text="跳转Activity回调"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Activity"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="20sp" />

</RelativeLayout>